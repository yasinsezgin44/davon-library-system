# EditorConfig is a file format for defining coding styles
# and a collection of text editor plugins that enable editors to read the file format
# and adhere to defined styles.
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{java,kt,kts,scala,groovy,gradle}]
indent_size = 4
max_line_length = 120

[*.{xml,xsd,xsl,html,xhtml,json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false 